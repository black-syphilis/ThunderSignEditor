{
  "manifest_version": 2,
  "name": "ThunderSignEditor",
  "version": "1.1",
  "description": "Signature editor for Thunderbird.",
  "applications": {
    "gecko": {
      "id": "thundersigneditor@proton.me",
      "strict_min_version": "136.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Thunder Sign Editor",
    "default_icon": "icon.png"
  },
  "permissions": [
    "accountsRead",
    "accountsIdentities",
    "storage",
    "clipboardWrite"
  ],
  "optional_permissions": [
    "accountsRead",
    "accountsIdentities"
  ]
}
